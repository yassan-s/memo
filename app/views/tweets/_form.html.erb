<%= form_with model: tweet do |form| %>

  <!-- title -->
  <%= form.label :title, "Title", class: "textarea_field" %>
  <%= form.text_area :title, class: "nes-textarea" %>

  <!-- body -->
  <%= form.label :body, "Tweet", class: "textarea_field" %>
  <%= form.text_area :body, class: "nes-textarea" %>


  <!-- submit -->
  <%= form.submit "OK!", class: "nes-btn is-primary" %>

<% end %>



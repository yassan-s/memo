<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="nes-field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "nes-input" %>
  </div>

  <div class="nes-field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "nes-input" %>
  </div>

  <div class="nes-field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "nes-input" %>
  </div>

  <div class="nes-field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "nes-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "nes-btn" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
